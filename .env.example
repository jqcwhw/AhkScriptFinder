# Database (Provided by Render for backend deployment)
DATABASE_URL=postgresql://user:password@host:5432/database

# OpenAI API (for AI script generation)
# Option 1: Use Replit AI Integration (already configured in Replit)
AI_INTEGRATIONS_OPENAI_BASE_URL=http://localhost:1106/modelfarm/openai
AI_INTEGRATIONS_OPENAI_API_KEY=_DUMMY_API_KEY_

# Option 2: Use your own OpenAI API key (for external deployment)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# GitHub Personal Access Token (optional - for higher API rate limits)
# GITHUB_TOKEN=ghp_your_github_token_here

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration (for Vercel deployment)
# VITE_API_URL=https://your-backend.onrender.com
